---
import WebFooter from "../components/navigations/WebFooter.astro";
import WebNavbar from "../components/navigations/WebNavbar.astro";
import BodyScripts from "../components/partials/BodyScripts.astro";
import BlurBackground from "../components/partials/BlurBackground.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/spk.png" />
        <meta name="generator" content={Astro.generator} />
        <title>F-AHP</title>
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <meta name="title" content={title || "Penerapan Fuzzy AHP-SAW"} />
        <meta name="description" content={description || "Website penerapan metode fuzzy Tsukamoto dan AHP-SAW pada pemilihan tim bulu tangkis."} />
        <ClientRouter fallback="swap" />
    </head>
    <body>
        <WebNavbar />
        <BlurBackground />
        <slot />
        <WebFooter />
        <BodyScripts />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
</style>
