---
import WebNavbar from "../components/navigations/WebNavbar.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>F-AHP</title>
		<meta name="title" content={title || 'Penerapan Fuzzy AHP-SAW'} />
		<meta name="description" content={description || 'Website penerapan metode fuzzy Tsukamoto dan AHP-SAW pada pemilihan tim bulu tangkis.'} />
		<ClientRouter />
	</head>
	<body>
		<WebNavbar />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
