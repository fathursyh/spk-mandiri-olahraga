---
import WebNavbar from "../components/navigations/WebNavbar.astro";
import BlurBackground from "../components/partials/BlurBackground.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>F-AHP</title>
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <meta name="title" content={title || "Penerapan Fuzzy AHP-SAW"} />
        <meta name="description" content={description || "Website penerapan metode fuzzy Tsukamoto dan AHP-SAW pada pemilihan tim bulu tangkis."} />
        <ClientRouter fallback="swap" />
    </head>
    <body>
        <WebNavbar />
        <BlurBackground />
        <slot />
        <script src="https://unpkg.com/aos@next/dist/aos.js" is:inline></script>
        <script is:inline>
            AOS.init({
                offset: 80,
                delay: 0,
                duration: 700,
                easing: "ease",
                once: false,
            });
            document.addEventListener("astro:after-swap", () => {
                AOS.init({
                    offset: 80,
                    delay: 0,
                    duration: 700,
                    easing: "ease",
                    once: false,
                });
            });
        </script>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
